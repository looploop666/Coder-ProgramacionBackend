<h1 style="color:blue;">Formulario Ingreso de Productos</h1>
<br>

<form action="/productos" method="post">

    <div class="form-group">
        <label for="title"><b>Title</b></label>
        <input id="title" class="form-control" type="text" name="title">
    </div>

    <div class="form-group">
        <label for="price"><b>Price</b></label>
        <input id="price" class="form-control" type="number" name="price">
    </div>

    <div class="form-group">
        <label for="thumbnail"><b>Thumbnail</b></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
    </div>

    <button class="btn btn-success mt-3 mb-5">Enviar</button>
</form>



<h2 style="color:crimson;">Historial</h2>

{{#if productos}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Title</th>
            <th>Price</th>
            <th>Thumbnail</th>
        </tr>
        {{#each productos}}
        <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td><img class="img-fluid img-thumbnail" alt="{{title}}" src="{{thumbnail}}"></td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">No se encontraron productos!</h3>
{{/if}}